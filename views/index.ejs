<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="manifest" href="%PUBLIC_URL%/manifest.json">
	<link rel="shortcut icon" href="%PUBLIC_URL%/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/assets/index_style.css">
    <script src="/app.js" defer></script>
    <script src="/assets/script/script.js" defer></script>
    <script src="/assets/script/settings.js" defer></script>
    <script type="module" src="/src/math.js" defer></script>
    <script type="module" src="/src/functionPlot.js" defer></script>
    <script src="https://kit.fontawesome.com/edc27adb51.js" crossorigin="anonymous"></script>
    

    <title>Graph</title>
</head>
<body>
    <div class="container">
        <div class="user-coloumn">
            <div class="settings-container">
                <div class="settings-block">
                    <div class="selection-container">
                        <div class="search-container">
                            <p id="username-p">Search usernames</p>   
                            <div class="user-submit">
                                <input type="text" id="autocomplete_search" placeholder="Type username here" />
                                <span id="search_result"></span>
                            </div>
                        </div>
                    </div>
                    <div class="selection-container" onclick="calculateReveal()">
                        <i class="fa-solid fa-calculator"></i>
                        <p>Calculate</p>
                    </div>
                    <div class="selection-container" onclick="historyReveal()">
                        <i class="fa-solid fa-clock-rotate-left"></i>
                        <p>History</p>
                    </div>
                    <div class="selection-container" onclick="settingsReveal()">
                        <i class="fa-solid fa-gear"></i>
                        <p>Settings</p>
                    </div>
                    <div class="selection-container">
                        <i class="fa-solid fa-right-from-bracket" onclick="logoutReveal()"></i>
                        <p>Logout</p>
                    </div>
                    </div>
                <div class="testing-container">
                    <i onclick="settings()" class="fa-solid fa-bars button"></i>
                </div>
            </div>
            <h1>Graph Visualizer</h1>
            <div class="graph-input">
                <input id="graphFunction" type="text" placeholder="Example: x^2...">
                <button class="submit">Submit</button>
            </div>

            

            <div class="category-container">
                <div class="calculate-container">
                    <h2>Calculate</h2>
                    <div class="calculate-selection">
                        <!-- ## OPTIONS ##  -->

                        <button class="math-calc" onclick="calcOption('y')">X values</button>
                        <button class="math-calc" onclick="calcOption('integral')">Integrals</button>
                        <button class="math-calc" onclick="calcOption('tangent')">Tangents</button>
                        <button class="math-calc" onclick="calcOption('secant')">Secants</button>
                        <button class="math-calc" onclick="calcOption('derivative')">Derivatives</button>
                        <button class="math-calc" onclick="calcOption('vector')">Vectors</button>
                        <button class="math-calc" id="long" onclick="calcOption('annotations')">Annotations</button>

                        <!-- ## DISPLAYS ##  -->

                        <div class="y-container">
                            <button class="calc-back" onclick="calcBack('y')">Back</button>
                            <p>Input x value for f(x)</p>
                            <div class="input-calc-container">
                                <input class="x-value" type="number">
                                <button class="xVal-update">Calculate</button>
                            </div>
                            <div class="xVal-output"></div>

                            <p>Enter an equation for simplification</p>
                            <div class="input-calc-container">
                                <input type="text" class="simplify-string">
                                <button class="xVal-update">Calculate</button>
                            </div>
                                <div class="simplify-container"></div>
                        </div>

                        <div class="integral-container">
                            <button class="calc-back" onclick="calcBack('integral')">Back</button>

                            <div class="input-integral-container">
                                <p>Input x1 value</p>
                                <input class="x1t" type="number">
                            </div>
                            <div class="input-integral-container">
                                <p>Input x2 value</p>
                                <input class="x2t" type="number">
                            </div>
                        </div>

                        <div class="tangent-container">
                            <button class="calc-back" onclick="calcBack('tangent')">Back</button>

                            <div class="tangent-buttons">
                                <button id="tangent-activate">Activate tangent</button>
                                <button id="tangent-deactivate">Deactivate tangent</button>
                            </div>
                        </div>

                    
                        <div class="secant-container">
                            <button class="calc-back" onclick="calcBack('secant')">Back</button>

                            <div class="input-secant-container">
                                <p>Input x1 value</p>
                                <input class="x1s" type="number">
                                <p>Input x2 value</p>
                                <input class="x2s" type="number">
                            </div>
                        </div>

                        <div class="derivative-container"> 
                            <button class="calc-back" onclick="calcBack('derivative')">Back</button>

                            <div class="input-derivative-container">
                                <p>Derivative</p>
                                <div class="deriv-output"></div>
                                <p>Calculate f'(x)</p>
                                <input type="number" class="x-deriv">
                                <button class="deriv-update">Update</button>
                                <div class="derivX-output"></div>
                            </div>
                        </div>

                        <div class="vector-container">
                            <button class="calc-back" onclick="calcBack('vector')">Back</button>

                            <div class="input-vector1-container">
                                <p>Input x1 value</p>
                                <input class="x1v" type="number">
                                <p>Input y1 value</p>
                                <input class="y1v" type="number">
                            </div>

                            <div class="input-vector2-container">
                                <p>Input x2 value</p>
                                <input class="x2v" type="number">
                                <p>Input y2 value</p>
                                <input class="y2v" type="number">
                                <button id="updateVec">Update</button>
                            </div>

                        </div>

                        <div class="annotations-container">
                            <button class="calc-back" onclick="calcBack('annotations')">Back</button>

                            <div class="input-annotations-container">
                                <p>Input x annotation</p>
                                <input class="xa" type="number">
                                <p>Input y annotation</p>
                                <input class="ya" type="number">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="history-container">
                    <h2>History</h2>
                    <div class="history"></div> 
                </div>
            </div>
        </div>
    </div>
    <div class="graph-container">
        <div id="root"></div>
        <p>Change function color</p>
        <input type="color" id="graph-color" value="#0000ff">
        <button id="graph-color-button">Update</button>
    </div>



<div class="profile-card">
    <button onclick="profileUnreveal()" id="profile-card-back">Back</button>
    <img id="profile-card-img" src="/assets/Images/defaltPFP.png" alt="Profile picture">
      <div class="information-container">
        <p id="usernameDisplay"></p>
        <p id="countryDisplay">Country: None selected</p>
        <p id="membersinceDisplay"></p>
    </div> 

      <!-- <div class="information-container">
        <p id="usernameDisplay">Username: ella</p>
        <p id="countryDisplay">Country: Sweden</p>
        <p id="membersinceDisplay">Member since: 9/11</p>
    </div>     -->

</div>



<div class="settings-card">
    <button onclick="settingsUnreveal()" id="settings-card-back">Back</button>
    <div class="settings-container">
        <p>Settings</p>
        <div class="settings-content">
            <div class="settings-area color-settings">
                <p>Select your desired theme:</p>
                <input id="page-color" type="color">
                <button onclick="pageTheme()">Submit</button>
            </div>
        </div>
    </div> 

</div>

</body>
</html>

